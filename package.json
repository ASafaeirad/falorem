{
  "name": "falorem",
  "version": "0.0.1",
  "license": "MIT",
  "author": "frontendmonster <frontendmonster@gmail.com>",
  "description": "Persian lorem generator",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontendmonster/falorem.git"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "build": "tsc",
    "lint": "tslint --project ./ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lib:publish": "builder",
    "lib:pack": "builder --pack",
    "verify": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@frontendmonster/builder": "^0.2.0",
    "@types/jest": "^24.0.14",
    "@types/node": "^12.0.8",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run verify"
    }
  }
}
