{
  "name": "falorem",
  "version": "1.0.0",
  "license": "MIT",
  "author": "frontendmonster <frontendmonster@gmail.com>",
  "description": "Persian lorem generator",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontendmonster/falorem.git"
  },
  "main": "./bundles/index.umd.js",
  "module": "./esm5/index.js",
  "es2015": "./esm2015/index.js",
  "typings": "./types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "commit": "git-cz",
    "clean": "rimraf lib",
    "prebuild": "npm run clean && npm run verify",
    "build": "tsc && tsc --target es2018 --outDir lib/esm2015 && rollup -c",
    "lint": "tslint --project tsconfig.json --fix",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm t -- --watch",
    "test:coverage": "npm t -- --coverage",
    "lib:build": "builder",
    "lib:pack": "builder --pack",
    "prerelease": "builder",
    "release": "standard-version",
    "postrelease": "npm run release:github && npm run release:npm",
    "release:github": "git push --no-verify --follow-tags origin master",
    "release:npm": "npm publish lib",
    "release:preflight": "npm pack ./lib --dry-run",
    "verify": "npm run lint && npm run test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@frontendmonster/builder": "1.0.0",
    "@types/jest": "24.0.14",
    "@types/node": "12.0.8",
    "commitizen": "3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "lint-staged": "8.1.0",
    "rimraf": "2.6.3",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-uglify": "6.0.0",
    "rollup": "0.68.2",
    "standard-version": "6.0.1",
    "ts-jest": "24.0.2",
    "tslint-config-prettier": "1.18.0",
    "tslint": "5.17.0",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test -- --bail --onlyChanged"
    }
  }
}
